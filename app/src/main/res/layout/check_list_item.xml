<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/checkUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/checkSum"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:text="ЗАО Тандер"
            android:maxLines="1"
            android:textColor="@color/colorBlack87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/checkDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/checkUser"
            android:fontFamily="sans-serif"
            android:text="15 дек. 2017"
            android:textColor="@color/colorBlack87"
            android:textSize="14sp" />

        <TextView
            android:text="5000,12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkSum"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack87"
            android:textSize="18sp"/>
            <!--android:textStyle="normal|bold"-->

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkID"
            android:layout_below="@id/checkSum"
            android:visibility="invisible" />
    </RelativeLayout>
</FrameLayout>